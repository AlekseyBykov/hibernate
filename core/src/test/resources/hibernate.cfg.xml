<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://localhost:50435;databaseName=hibernate;</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>

        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="entities.core.SecondEntity"/>
        <mapping class="entities.core.FirstEntity"/>

        <mapping class="entities.mapping.manytoone.unidirectional.Department"/>
        <mapping class="entities.mapping.manytoone.unidirectional.Employee"/>
        <mapping class="entities.mapping.manytoone.bidirectional.University"/>
        <mapping class="entities.mapping.manytoone.bidirectional.Student"/>

    </session-factory>

</hibernate-configuration>